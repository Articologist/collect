{% extends 'base.html.twig' %}

{% form_theme form 'Form/fields.html.twig' %}

{% block body %}
    <div class="box">
        <div>
            <h1>
                Welcome to Koillection
                <div class='logo' aria-label="Logo"></div>
            </h1>

            <div class="content">
                {{ include('App/Security/partials/locales-dropdown.html.twig') }}

                {{ form_start(form) }}
                    <h5 class="header">{{ 'title.first_connection.user'|trans }}</h5>
                    {{ form_errors(form) }}
                    {{ form_row(form.username, {'label' : 'label.username'} ) }}
                    {{ form_row(form.email, {'label' : 'label.email'} ) }}
                    {{ form_row(form.plainPassword.first, {'label': 'label.password'}) }}
                    {{ form_row(form.plainPassword.second, {'label': 'label.repeat_password'}) }}
                    <div class="submit">
                        {{ form_row(form.submit, {'label': 'btn.submit', 'attr': {'class': 'btn btn-lg btn-success btn-block right'}}) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
