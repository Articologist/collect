{% extends 'layout.html.twig' %}

{% set breadcrumb = buildBreadcrumb([{'route': 'app_template_index', 'trans': 'menu.templates'}], template) %}

{% block title %}
    {{ renderTitle(breadcrumb)  }}
{% endblock %}

{% block breadcrumb %}
    {{ renderBreadcrumb(breadcrumb)  }}
{% endblock %}

{% block content %}
    <div class="title-block">
        <h1>{{ template.name }}</h1>
        <ul class="nav nav-pills">
            <li>{{ 'counter.field'|trans({'%count%': template.fields|length}) }}</li>
        </ul>
    </div>

    <div></div>

    <div class="btn-holder">
        <a href="{{ path('app_template_edit', {'id': template.id}) }}" class="button" title="{{ 'tooltip.edit'|trans }}">
            <i class="fa fa-pencil fa-fw"></i>
        </a>
        <a href="#modal-delete"
           class="modal-trigger button"
           title="{{ 'tooltip.delete'|trans }}"
           data-path="{{ path('app_template_delete', {id: template.id}) }}"
           data-message="{{ 'message.delete.template'|trans }}"
        >
            <i class="fa fa-trash fa-fw"></i>
        </a>
    </div>

    <div class="content-block">
        <div class="block-element">
            <h2 class="header">{{ 'title.fields'|trans }}</h2>
            <ul class="reset-margin">
                {% for field in template.fields %}
                    <li class="list-element">
                        {{ field.name }} - <span class="complementary-color">{{ field.typeLabel|trans }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}

{% block modals %}
    {% if context == 'default' %}
        {{ include('App/_partials/_modal/_delete.html.twig') }}
    {% endif %}
{% endblock %}

